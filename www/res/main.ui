TrackGroup rot
{
    Track pnl_arrange
    {
        SetRotate 0 0
        Rotate 0 1200 360
        #Scale 0 100 1.2
        #Scale 100 200 0.5
        #Scale 200 1200 1
    }
}
TrackGroup rot_pnl1
{    
    Track pnl1
    {
        SetRotate 0 0
        RotateLerp 0 60 360 2
        RotateLerp 60 120 0 4
    }
    Track pnl_arrange
    {
        SetAlpha 0 0
        SetScale 0 2
        #Alpha 0 60 0
        Scale 100 160 1
        Alpha 100 160 255
        SetAlpha 240 255
        AlphaLerp 240 300 0 4
        Scale 240 300 2 
    }
}
